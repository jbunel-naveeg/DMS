# Marketing App Environment Configuration
# Copy this file to .env.local and fill in your values

# =============================================================================
# CORE CONFIGURATION
# =============================================================================

# Application URLs
NEXT_PUBLIC_APP_URL=https://app.naveeg.com
NEXT_PUBLIC_MARKETING_URL=https://naveeg.com

# Environment
NODE_ENV=development
NEXT_PUBLIC_VERCEL_ENV=development

# =============================================================================
# SUPABASE CONFIGURATION (Read-only for marketing)
# =============================================================================

# Supabase Project Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# =============================================================================
# ANALYTICS CONFIGURATION
# =============================================================================

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Vercel Analytics
VERCEL_ANALYTICS_ID=your_vercel_analytics_id

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Marketing Features
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_CHATBOT=false
NEXT_PUBLIC_ENABLE_DEMO=true

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Contact Form (Optional - using Supabase)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@naveeg.com
