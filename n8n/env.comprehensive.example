# N8N Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# N8N CORE CONFIGURATION
# =============================================================================

# N8N Basic Configuration
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your_n8n_basic_auth_password
N8N_ENCRYPTION_KEY=your_32_character_encryption_key

# N8N Webhook Configuration
N8N_WEBHOOK_URL=https://your_n8n_instance.com
N8N_HOST=0.0.0.0
N8N_PORT=5678
N8N_PROTOCOL=https

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database (for N8N)
DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=your_postgres_host
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_DATABASE=n8n
DB_POSTGRESDB_USER=n8n_user
DB_POSTGRESDB_PASSWORD=your_n8n_db_password
DB_POSTGRESDB_SCHEMA=public

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# Redis Configuration (for N8N queue)
QUEUE_BULL_REDIS_HOST=your_redis_host
QUEUE_BULL_REDIS_PORT=6379
QUEUE_BULL_REDIS_PASSWORD=your_redis_password
QUEUE_BULL_REDIS_DB=0

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# 10Web API Configuration
TENWEB_API_KEY=your_10web_api_key
TENWEB_API_URL=https://api.10web.io

# OpenAI Configuration
OPENAI_API_KEY=sk-your_openai_api_key
OPENAI_MODEL=gpt-4

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# =============================================================================
# NOTIFICATION SERVICES
# =============================================================================

# Slack Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_BOT_TOKEN=xoxb-your_slack_bot_token
SLACK_CHANNEL=#naveeg-notifications

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@naveeg.com

# =============================================================================
# WORKFLOW CONFIGURATION
# =============================================================================

# Lead Management Workflow
LEAD_MANAGEMENT_WEBHOOK_URL=https://your_n8n_instance.com/webhook/lead-management
LEAD_MANAGEMENT_SLACK_CHANNEL=#leads

# Site Provisioning Workflow
SITE_PROVISIONING_WEBHOOK_URL=https://your_n8n_instance.com/webhook/site-provisioning
SITE_PROVISIONING_SLACK_CHANNEL=#site-provisioning

# Subscription Management Workflow
SUBSCRIPTION_WEBHOOK_URL=https://your_n8n_instance.com/webhook/subscription-management
SUBSCRIPTION_SLACK_CHANNEL=#subscriptions

# Domain Management Workflow
DOMAIN_WEBHOOK_URL=https://your_n8n_instance.com/webhook/domain-management
DOMAIN_SLACK_CHANNEL=#domains

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Configuration
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=7d

# Encryption Configuration
ENCRYPTION_KEY=your_32_character_encryption_key
ENCRYPTION_ALGORITHM=aes-256-gcm

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Logging Configuration
N8N_LOG_LEVEL=info
N8N_LOG_OUTPUT=console,file
N8N_LOG_FILE_LOCATION=/var/log/n8n/

# Health Check Configuration
N8N_HEALTH_CHECK_ACTIVE=true
N8N_HEALTH_CHECK_ENDPOINT=/healthz

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Execution Configuration
EXECUTIONS_MODE=queue
EXECUTIONS_TIMEOUT=3600
EXECUTIONS_TIMEOUT_MAX=7200

# Queue Configuration
QUEUE_BULL_REDIS_CONNECTION_TIMEOUT=10000
QUEUE_BULL_REDIS_COMMAND_TIMEOUT=10000

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# N8N Features
N8N_DISABLE_UI=false
N8N_DISABLE_PRODUCTION_MAIN_PROCESS=false
N8N_DISABLE_WEBHOOK_DEREGISTRATION_SHUTDOWN=true

# Workflow Features
ENABLE_LEAD_MANAGEMENT=true
ENABLE_SITE_PROVISIONING=true
ENABLE_SUBSCRIPTION_MANAGEMENT=true
ENABLE_DOMAIN_MANAGEMENT=true
